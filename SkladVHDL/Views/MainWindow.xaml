<Window x:Class="SkladVHDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skladový systém" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="8">
            <Image Source="pack://application:,,,/Assets/warehouse.png"
                   Height="110" Width="300" Stretch="Uniform" Margin="0,4"/>
            <TextBlock Text="Skladový systém" FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,6"/>
            <TextBlock Text="SkladVHDL" FontSize="14" HorizontalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <!-- Main -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Materiál a Palety pod sebou -->
            <StackPanel Grid.Column="0" Margin="6" VerticalAlignment="Top" >
                <TextBlock Text="Tabulky" FontSize="18" FontWeight="SemiBold" Margin="4"/>

                <!-- Materiál -->
                <GroupBox Header="Materiál" Margin="6" Padding="8" Height="200">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- malé místo pro obrázek -->
                        <Border Grid.Column="0" Width="70" Height="70" Background="#F0F0F0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4">
                            <Image Source="pack://application:,,,/Assets/placeholder.png" Stretch="Uniform" />
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Palety -->
                <GroupBox Header="Palety" Margin="6" Padding="8" Height="200">
                    <Grid Margin="0,0,582,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- malé místo pro obrázek -->
                        <Border Grid.Column="0" Width="70" Height="70" Background="#F0F0F0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4">
                            <Image Source="pack://application:,,,/Assets/placeholder.png" Stretch="Uniform" />
                        </Border>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <!-- RIGHT: Přehledy pod sebou -->
            <StackPanel Grid.Column="1" Margin="6" VerticalAlignment="Top">
                <TextBlock Text="Přehled" FontSize="18" FontWeight="SemiBold" Margin="4"/>

                <GroupBox Header="Přehled materiálu" Margin="6" Padding="8" Height="170">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="50" Height="50" Background="#F0F0F0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4">
                            <Image Source="pack://application:,,,/Assets/placeholder_small.png" Stretch="Uniform" />
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Přehled palet" Margin="6" Padding="8" Height="170">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="50" Height="50" Background="#F0F0F0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4">
                            <Image Source="pack://application:,,,/Assets/placeholder_small.png" Stretch="Uniform" />
                        </Border>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>